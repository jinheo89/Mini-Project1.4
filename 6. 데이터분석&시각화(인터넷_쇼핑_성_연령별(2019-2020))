
setwd("C:/workspace/R_basic/pjt1.4")

data5<-read.csv("인터넷_쇼핑_성_연령별(2019-2020).csv", header=TRUE)

#인터넷 쇼핑 성별 이용자 비율
#2019년 20대~70대 여성
v2019.1<-data5[c(12:17),3]
#2019년 20대~70대 남성
v2019.2<-data5[c(20:25),3]

#2020년 20대~70대 여성
v2020.1<-data5[c(12:17),9]
#2020년 20대~70대 남성
v2020.2<-data5[c(20:25),9]

#성별비교
mat1.1<-rbind(v2019.1, v2019.2)
names<-rep(c("20대","30대","40대","50대","60대","70대"), each=2)
barplot(as.numeric(mat1.1), beside=T,col=rainbow(2), names=names, main="인터넷쇼핑이용자비율(%)")
legend("topright", legend=c("2019 여성","2019 남성"), fill=rainbow(2), cex=0.6)

mat1.2<-rbind(v2020.1,v2020.2)
barplot(as.numeric(mat1.2), beside=T,col=rainbow(2), names=names, main="인터넷쇼핑이용자비율(%)")
legend("topright", legend=c("2020 여성","2020 남성"), fill=rainbow(2), cex=0.6)

#분석결과: 20~30대 층은 성별에 상관없이 높은 인터넷 쇼핑 비율을 보이고, 40~50대 구간에서는 여성층인경우 인터넷쇼핑이용비율이 남성보다 더 높았다.
#고령층은 60~70대 구간에서는 남성층의 인터넷쇼핑이용비율이 약간 높았다.
#이를 통해 1인 가구 비중은 70대 이상(18.6%)이 가장 많고, 이어 60대(17.7%), 50대(17.2%), 30대(16.5%), 20대(15.7%), 40대(13.9%), 10대 이하(0.4%) 순임을 고려하면
#1인가구 상품서비스 추천시 20-30대를 우선으로 그리고 40-50대를 주요 대상으로 하면 적절할 것이다. 

#연도비교
mat2.1<-rbind(v2019.1,v2020.1)
barplot(as.numeric(mat2.1), beside=T,col=rainbow(2), names=names, main="인터넷쇼핑이용자비율(%)")
legend("topright", legend=c("2019 여성","2020 여성"), fill=rainbow(2), cex=0.6)

mat2.2<-rbind(v2019.2,v2020.2)
barplot(as.numeric(mat2.2), beside=T,col=rainbow(2), names=names, main="인터넷쇼핑이용자비율(%)")
legend("topright", legend=c("2019 남성","2020 남성"), fill=rainbow(2), cex=0.6)

#분석결과: 코로나 전후 인터넷쇼핑이용자비율을 비교해보면 남여공통으로 40-60대에서 이용비율이 증가했다.


#인터넷 쇼핑 성별 구매빈도 비율
#성별비교
#2019년 20대 여성
v2019.3<-as.vector(as.matrix(data5[12,4:7]))
#2020년 20대 여성
v2020.3<-as.vector(as.matrix(data5[12,10:13]))

mat3.1<-rbind(v2019.3,v2020.3)
names<-rep(c("월평균 구매빈도 1회미만","월평균 구매빈도 1~2회미만","월평균 구매빈도 2~3회미만","월평균 구매빈도 3회이상"), each=2)
barplot(as.numeric(mat3.1), beside=T,col=rainbow(2), names=names, main="월평균 구매빈도")
legend("topleft", legend=c("2019 20대 여성","2020 20대 여성"), fill=rainbow(2), cex=0.6)

#2019년 20대 남성
v2019.4<-as.vector(as.matrix(data5[20,4:7]))
#2020년 20대 남성
v2020.4<-as.vector(as.matrix(data5[20,10:13]))

mat3.2<-rbind(v2019.4,v2020.4)
barplot(as.numeric(mat3.2), beside=T,col=rainbow(2), names=names, main="월평균 구매빈도")
legend("topleft", legend=c("2019 20대 남성","2020 20대 남성"), fill=rainbow(2), cex=0.6)

#분석결과: 코로나 전후 인터넷 쇼핑 구매빈도 비교결과 20대 남여공통으로 월평균 구매빈도 3회 이상 증가한비율이 더 높아졌다. 

#2019년 30대 여성
v2019.5<-as.vector(as.matrix(data5[13,4:7]))
#2020년 30대 여성
v2020.5<-as.vector(as.matrix(data5[13,10:13]))

mat4.1<-rbind(v2019.5,v2020.5)
barplot(as.numeric(mat4.1), beside=T,col=rainbow(2), names=names, main="월평균 구매빈도")
legend("topleft", legend=c("2019 30대 여성","2020 30대 여성"), fill=rainbow(2), cex=0.6)

#2019년 30대 남성
v2019.6<-as.vector(as.matrix(data5[21,4:7]))
#2020년 30대 남성
v2020.6<-as.vector(as.matrix(data5[21,10:13]))

mat4.2<-rbind(v2019.6,v2020.6)
barplot(as.numeric(mat4.2), beside=T,col=rainbow(2), names=names, main="월평균 구매빈도")
legend("topleft", legend=c("2019 30대 남성","2020 30대 남성"), fill=rainbow(2), cex=0.6)

#분석결과: 코로나 전후 인터넷 쇼핑 구매빈도 비교결과 30대 남여공통으로 월평균 구매빈도 3회 이상 증가한비율이 더 높아졌다. 


#2019년 40대 여성
v2019.7<-as.vector(as.matrix(data5[14,4:7]))
#2020년 40대 여성
v2020.7<-as.vector(as.matrix(data5[14,10:13]))

mat5.1<-rbind(v2019.7,v2020.7)
barplot(as.numeric(mat5.1), beside=T,col=rainbow(2), names=names, main="월평균 구매빈도")
legend("topleft", legend=c("2019 40대 여성","2020 40대 여성"), fill=rainbow(2), cex=0.6)

#2019년 40대 남성
v2019.8<-as.vector(as.matrix(data5[22,4:7]))
#2020년 40대 남성
v2020.8<-as.vector(as.matrix(data5[22,10:13]))

mat5.2<-rbind(v2019.8,v2020.8)
barplot(as.numeric(mat5.2), beside=T,col=rainbow(2), names=names, main="월평균 구매빈도")
legend("topleft", legend=c("2019 40대 남성","2020 40대 남성"), fill=rainbow(2), cex=0.6)

#분석결과: 코로나 전후 인터넷 쇼핑 구매빈도 비교결과 40대 남여공통으로 월평균 구매빈도 3회 이상 증가한비율이 더 높아졌다. 


#2019년 50대 여성
v2019.9<-as.vector(as.matrix(data5[15,4:7]))
#2020년 50대 여성
